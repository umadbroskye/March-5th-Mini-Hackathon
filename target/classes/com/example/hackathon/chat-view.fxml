        </Label>
        <Label fx:id="userLabel" layoutX="482.0" layoutY="59.0" text="User List">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <TextArea layoutX="431.0" layoutY="81.0" prefHeight="174.0" prefWidth="147.0" style="-fx-background-color: gray;" />
        <Label layoutX="29.0" layoutY="51.0" text="Messages">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
    </children>
