<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hackathon.ChatView">
    <children>
        <VBox />
        <TextField fx:id="writeMessageBox" alignment="CENTER" layoutY="300.0" maxWidth="1.7976931348623157E308" onAction="#writeMessageBoxClicked" prefHeight="90.0" prefWidth="431.0" promptText="Write Message Here" style="-fx-background-color: white;">
